.container {
  min-height: 200rpx;
  display: flex;
  padding: 30rpx;
  margin: 20rpx 15rpx 15rpx 15rpx;
  border-radius: 15rpx;
  background-color: #fff;
  box-shadow: 0 4rpx 8rpx 0 rgba(0, 0, 0, 0.1), 0 6rpx 15rpx 0 rgba(0, 0, 0, 0.15);
}
.container .userInfo {
  flex: 2;
  height: 85rpx;
}
.container .userInfo .avatar {
  float: left;
  overflow: hidden;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}
.container .userInfo .avatar image {
  width: 100%;
}
.container .userInfo .nick-name {
  line-height: 75rpx;
}
.container .userInfo .desc::before {
  content: "";
  background-color: var(--themecolor);
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}
.container .userInfo .desc {
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.container .img {
  flex: 1;
  width: 100%;
}
.container .img image {
  vertical-align: bottom;
  width: 100%;
}
